<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    tools:showIn="@layout/activity_add_news">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.springflower.buybuygo.addNewsActivity">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextNewsTitle"
            android:width="100dp"
            android:background="@android:drawable/edit_text"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_alignRight="@+id/editTextNewsContent"
            android:layout_alignEnd="@+id/editTextNewsContent"
            android:layout_marginTop="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名稱:"
            android:id="@+id/textView001"
            android:layout_marginLeft="31dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:textIsSelectable="true"
            android:textSize="20dp"
            android:layout_marginBottom="40dp"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品描述:"
            android:id="@+id/textView2"
            android:textSize="20dp"
            android:layout_marginTop="81dp"
            android:textColor="#ffffffff"
            android:layout_below="@+id/editTextNewsTitle"
            android:layout_alignLeft="@+id/textView001"
            android:layout_alignStart="@+id/textView001" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editTextNewsContent"
            android:gravity="top"
            android:minLines="5"
            android:background="@android:drawable/edit_text"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginTop="10dp"
            android:width="300dp"
            android:layout_marginRight="31dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="款式/口味/類型 數量:"
            android:id="@+id/textView"
            android:textSize="18dp"
            android:textColor="#ffffffff"
            android:layout_below="@+id/button2"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextaddFeat1"
            android:background="@android:drawable/edit_text"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginTop="10dp"
            android:width="80dp"
            android:visibility="visible" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextaddFeat2"
            android:background="@android:drawable/edit_text"
            android:width="80dp"
            android:layout_alignTop="@+id/editTextaddFeat1"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:id="@+id/editTextaddFeat3"
            android:width="80dp"
            android:layout_alignTop="@+id/editTextaddFeat2"
            android:layout_alignRight="@+id/editTextNewsContent"
            android:layout_alignEnd="@+id/editTextNewsContent"
            android:visibility="gone" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取貨位置"
            android:id="@+id/button2"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/editTextDate"
            android:layout_alignRight="@+id/spinner_endCond"
            android:layout_alignEnd="@+id/spinner_endCond"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品連結:"
            android:id="@+id/textView3"
            android:textSize="20dp"

            android:textColor="#ffffffff"
            android:layout_below="@+id/editTextNewsTitle"
            android:layout_alignLeft="@+id/editTextNewsTitle"
            android:layout_alignStart="@+id/editTextNewsTitle"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:id="@+id/editTextaddNewUrl"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_alignRight="@+id/editTextNewsTitle"
            android:layout_alignEnd="@+id/editTextNewsTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="結束條件"
            android:id="@+id/textView4"
            android:textSize="20dp"

            android:textColor="#ffffffff"
            android:layout_below="@+id/editTextNewsContent"
            android:layout_alignLeft="@+id/editTextNewsContent"
            android:layout_alignStart="@+id/editTextNewsContent" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_endCond"
            android:layout_below="@+id/editTextNewsContent"
            android:layout_toRightOf="@+id/textView4"
            android:layout_toEndOf="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignRight="@+id/editTextNewsContent"
            android:layout_alignEnd="@+id/editTextNewsContent" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_featNum"
            android:layout_alignTop="@+id/textView"
            android:layout_alignRight="@+id/editTextaddFeat3"
            android:layout_alignEnd="@+id/editTextaddFeat3"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:layout_alignBottom="@+id/textView" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextaddFeat4"
            android:layout_below="@+id/editTextaddFeat1"
            android:background="@android:drawable/edit_text"
            android:layout_alignLeft="@+id/editTextaddFeat1"
            android:layout_alignStart="@+id/editTextaddFeat1"
            android:layout_alignRight="@+id/editTextaddFeat1"
            android:layout_alignEnd="@+id/editTextaddFeat1"
            android:visibility="gone" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextaddFeat5"
            android:background="@android:drawable/edit_text"
            android:layout_alignTop="@+id/editTextaddFeat4"
            android:layout_alignLeft="@+id/editTextaddFeat2"
            android:layout_alignStart="@+id/editTextaddFeat2"
            android:layout_alignRight="@+id/editTextaddFeat2"
            android:layout_alignEnd="@+id/editTextaddFeat2"
            android:visibility="gone" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextaddFeat6"
            android:background="@android:drawable/edit_text"
            android:layout_below="@+id/editTextaddFeat3"
            android:layout_alignLeft="@+id/editTextaddFeat3"
            android:layout_alignStart="@+id/editTextaddFeat3"
            android:layout_alignRight="@+id/editTextaddFeat3"
            android:layout_alignEnd="@+id/editTextaddFeat3"
            android:visibility="gone" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextaddFeat7"
            android:background="@android:drawable/edit_text"
            android:layout_below="@+id/editTextaddFeat4"
            android:layout_alignLeft="@+id/editTextaddFeat4"
            android:layout_alignStart="@+id/editTextaddFeat4"
            android:layout_alignRight="@+id/editTextaddFeat4"
            android:layout_alignEnd="@+id/editTextaddFeat4"
            android:visibility="gone" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextaddFeat8"
            android:background="@android:drawable/edit_text"
            android:layout_below="@+id/editTextaddFeat5"
            android:layout_alignLeft="@+id/editTextaddFeat5"
            android:layout_alignStart="@+id/editTextaddFeat5"
            android:layout_alignRight="@+id/editTextaddFeat5"
            android:layout_alignEnd="@+id/editTextaddFeat5"
            android:visibility="gone" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextaddFeat9"
            android:background="@android:drawable/edit_text"
            android:layout_below="@+id/editTextaddFeat6"
            android:layout_alignLeft="@+id/editTextaddFeat6"
            android:layout_alignStart="@+id/editTextaddFeat6"
            android:layout_alignRight="@+id/button2"
            android:layout_alignEnd="@+id/button2"
            android:visibility="gone" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextDate"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignStart="@+id/button2"
            android:layout_toStartOf="@+id/spinner_featNum"
            android:layout_toLeftOf="@+id/spinner_featNum"
            android:visibility="gone" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="選擇日期"
            android:id="@+id/button_addNews_SelectDate"
            android:layout_alignTop="@+id/editTextDate"
            android:layout_alignRight="@+id/button2"
            android:layout_alignEnd="@+id/button2"
            android:layout_alignBottom="@+id/editTextDate"
            android:layout_toRightOf="@+id/editTextDate"
            android:layout_toEndOf="@+id/editTextDate"
            android:visibility="gone" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/editTextTime"
            android:layout_below="@+id/editTextDate"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignStart="@+id/button2"
            android:layout_alignRight="@+id/editTextDate"
            android:layout_alignEnd="@+id/editTextDate"
            android:visibility="gone" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="選擇時間"
            android:id="@+id/button_addNews_SelectTime"
            android:layout_below="@+id/button_addNews_SelectDate"
            android:layout_alignLeft="@+id/button_addNews_SelectDate"
            android:layout_alignStart="@+id/button_addNews_SelectDate"
            android:layout_alignBottom="@+id/editTextTime"
            android:layout_alignRight="@+id/spinner_endCond"
            android:layout_alignEnd="@+id/spinner_endCond"
            android:visibility="gone" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editText_addNews_Price"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignStart="@+id/button2"
            android:layout_alignRight="@+id/spinner_endCond"
            android:layout_alignEnd="@+id/spinner_endCond"
            android:visibility="gone"
            android:inputType="number" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_addNews_PeopleNum"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignStart="@+id/button2"
            android:layout_alignRight="@+id/button2"
            android:layout_alignEnd="@+id/button2"
            android:visibility="gone" />

    </RelativeLayout>
</ScrollView>