<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical" >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.example.springflower.buybuygo.addNewsActivity">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText01_join"
                android:width="100dp"
                android:background="@android:drawable/edit_text"
                android:layout_alignLeft="@+id/textView2_join"
                android:layout_alignStart="@+id/textView2_join"
                android:layout_alignRight="@+id/editText2_join"
                android:layout_alignEnd="@+id/editText2_join"
                android:layout_marginTop="40dp"
                android:textColor="#ff000000"
                android:text="CI甲" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名稱:"
                android:id="@+id/textView001_join"
                android:layout_marginLeft="31dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true"
                android:textSize="20dp"
                android:layout_marginBottom="40dp"
                android:textColor="#ffffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品描述:"
                android:id="@+id/textView2_join"
                android:textSize="20dp"
                android:layout_below="@+id/editText01_join"
                android:layout_alignLeft="@+id/textView001_join"
                android:layout_alignStart="@+id/textView001_join"
                android:layout_marginTop="10dp"
                android:textColor="#ffffffff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText2_join"
                android:gravity="top"
                android:minLines="5"
                android:background="@android:drawable/edit_text"
                android:layout_below="@+id/textView2_join"
                android:layout_alignLeft="@+id/textView2_join"
                android:layout_alignStart="@+id/textView2_join"
                android:layout_marginTop="10dp"
                android:width="300dp"
                android:layout_marginRight="31dp"
                android:text="astitle6"
                android:textColor="#ff000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="六連"
                android:id="@+id/textView_join"
                android:layout_below="@+id/editText2_join"
                android:layout_alignLeft="@+id/editText2_join"
                android:layout_alignStart="@+id/editText2_join"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:textColor="#ffffffff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText3_join"
                android:background="@android:drawable/edit_text"
                android:layout_below="@+id/textView_join"
                android:layout_alignLeft="@+id/textView_join"
                android:layout_alignStart="@+id/textView_join"
                android:layout_marginTop="10dp"
                android:width="80dp"
                android:inputType="number" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText4_join"
                android:background="@android:drawable/edit_text"
                android:width="80dp"
                android:layout_alignTop="@+id/editText3_join"
                android:layout_centerHorizontal="true"
                android:inputType="number" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:id="@+id/editText5_join"
                android:width="80dp"
                android:layout_alignTop="@+id/editText4_join"
                android:layout_alignRight="@+id/editText2_join"
                android:layout_alignEnd="@+id/editText2_join"
                android:inputType="none"
                android:visibility="invisible" />

            Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取貨位置"
                android:id="@+id/button2_join"
                android:layout_below="@+id/editText3_join"
                android:layout_alignLeft="@+id/editText3_join"
                android:layout_alignStart="@+id/editText3_join"
                android:layout_alignRight="@+id/editText5_join"
                android:layout_alignEnd="@+id/editText5_join"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="五連"
                android:id="@+id/textView09_join"
                android:textSize="18dp"
                android:textColor="#ffffffff"
                android:layout_alignTop="@+id/textView_join"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ShadowText"
        android:text="參加"
        android:id="@+id/button"
        android:background="@drawable/button_background_states"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />
</LinearLayout>
