<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.example.springflower.buybuygo.addNewsActivity">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTextNewsTitle"
                android:width="100dp"
                android:background="@android:drawable/edit_text"
                android:layout_alignTop="@+id/textView001"
                android:layout_alignLeft="@+id/editTextaddFeat2"
                android:layout_alignStart="@+id/editTextaddFeat2"
                android:layout_alignRight="@+id/editTextNewsContent"
                android:layout_alignEnd="@+id/editTextNewsContent"
                android:editable="false"
                android:text="好吃奶凍卷"
                android:textColor="#ff000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名稱:"
                android:id="@+id/textView001"
                android:layout_marginLeft="31dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true"
                android:textSize="20dp"
                android:layout_marginBottom="40dp"
                android:textColor="#ffffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品描述:"
                android:id="@+id/textView2"
                android:layout_below="@+id/editTextNewsTitle"
                android:layout_alignLeft="@+id/textView001"
                android:layout_alignStart="@+id/textView001"
                android:textSize="20dp"
                android:textColor="#ffffffff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|none"
                android:ems="10"
                android:id="@+id/editTextNewsContent"
                android:gravity="top"
                android:minLines="5"
                android:background="@android:drawable/edit_text"
                android:layout_below="@+id/textView2"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_marginTop="10dp"
                android:width="300dp"
                android:layout_marginRight="31dp"
                android:editable="false"
                android:text="http://ppt.cc/niUa\n\n總之就是好吃\n運費350\n超過20人有九折"
                android:textColor="#ff000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="草莓"
                android:id="@+id/textViewf1"
                android:textSize="20dp"
                android:textColor="#ffffffff"
                android:layout_below="@+id/editTextNewsContent"
                android:layout_alignLeft="@+id/editTextNewsContent"
                android:layout_alignStart="@+id/editTextNewsContent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="巧克力"
                android:id="@+id/textViewf2"
                android:textSize="20dp"
                android:textColor="#ffffffff"
                android:layout_below="@+id/editTextNewsContent"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textViewf3"
                android:textSize="20dp"
                android:textColor="#ffffffff"
                android:layout_below="@+id/editTextNewsContent"
                android:layout_alignRight="@+id/editTextNewsContent"
                android:layout_alignEnd="@+id/editTextNewsContent" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:id="@+id/editTextaddFeat3"
                android:width="80dp"
                android:layout_below="@+id/textViewf1"
                android:layout_alignLeft="@+id/textViewf1"
                android:layout_alignStart="@+id/textViewf1"
                android:editable="false"
                android:text="15"
                android:textColor="#ff000000" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTextaddFeat2"
                android:background="@android:drawable/edit_text"
                android:width="80dp"
                android:editable="false"
                android:layout_above="@+id/editTextaddNewUrl"
                android:layout_centerHorizontal="true"
                android:text="25"
                android:textColor="#ff000000" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTextaddFeat1"
                android:background="@android:drawable/edit_text"
                android:width="80dp"
                android:editable="false"
                android:layout_below="@+id/textViewf3"
                android:layout_alignRight="@+id/textViewf3"
                android:layout_alignEnd="@+id/textViewf3" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|none"
                android:background="@android:drawable/edit_text"
                android:width="80dp"
                android:ems="10"
                android:id="@+id/editTextaddNewUrl"
                android:layout_below="@+id/editTextaddFeat3"
                android:editable="false"
                android:minLines="5"
                android:layout_alignRight="@+id/editTextaddFeat1"
                android:layout_alignEnd="@+id/editTextaddFeat1"
                android:layout_alignLeft="@+id/editTextaddFeat3"
                android:layout_alignStart="@+id/editTextaddFeat3"
                android:text="david 草莓:5 巧克力 10\ncoldtea 草莓:10 巧克力:15\n"
                android:gravity="top"
                android:textColor="#ff000000" />

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ShadowText"
        android:text="確定"
        android:id="@+id/button"
        android:background="@drawable/button_background_states"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />
    </LinearLayout>
</LinearLayout>